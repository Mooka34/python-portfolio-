#:kivy 2.3.0
#:import MDScrollView kivymd.uix.scrollview.MDScrollView

<DetectScreen>:
    name: "detect"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(12)
        spacing: dp(12)

    MDLabel:
        text: "Fake Job Posting Detector"
        halign: "center"
        font_style: "H5"
        size_hint_y: None
        height: self.texture_size[1] + dp(8)

        MDScrollView:
            MDBoxLayout:
                id: form
                orientation: "vertical"
                spacing: dp(8)
                size_hint_y: None
                height: self.minimum_height

                MDTextField:
                    id: title
                    hint_text: "Job Title"
                    helper_text: "e.g., Remote Data Entry Clerk"
                    helper_text_mode: "on_focus"
                    size_hint_y: None
                    height: dp(56)

                MDTextField:
                    id: company
                    hint_text: "Company"
                    size_hint_y: None
                    height: dp(56)

                MDTextField:
                    id: description
                    hint_text: "Description"
                    multiline: True
                    min_height: dp(120)
                    size_hint_y: None
                    height: dp(160)

                MDTextField:
                    id: salary
                    hint_text: "Salary (optional)"
                    size_hint_y: None
                    height: dp(56)

                MDTextField:
                    id: location
                    hint_text: "Location (optional)"
                    size_hint_y: None
                    height: dp(56)

                MDTextField:
                    id: link
                    hint_text: "Link (optional)"
                    size_hint_y: None
                    height: dp(56)

                MDRaisedButton:
                    text: "Detect"
                    pos_hint: {"center_x": .5}
                    size_hint_x: 1
                    on_release: root.on_detect()

                MDSeparator:
                    height: dp(1)

                MDLabel:
                    id: result
                    text: ""
                    halign: "center"
                    theme_text_color: "Primary"
                    bold: True

                MDLabel:
                    id: scores
                    text: ""
                    halign: "center"
                    theme_text_color: "Secondary"
